{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "module": "ES6",
    "jsx": "react",
    "removeComments": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
