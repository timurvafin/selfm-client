{
  "compileOnSave": false,
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "dashes",
          "rendererOptions": {
          }
        }
      }
    ],
    "moduleResolution": "node",
    "target": "ES6",
    "module": "ES6",
    "jsx": "react",
    "removeComments": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/global.d.ts"
  ]
}
